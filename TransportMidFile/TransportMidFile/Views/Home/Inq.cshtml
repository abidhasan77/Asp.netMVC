
@{
    ViewBag.Title = "Inq";
}


<html>


<body>

    <div class="homex">


        <h1>Travel.Com</h1>



        <div class="user">

            <a class="sd" href="/Home/RegisterVehicle">Register Vehicle</a>
            <a class="sb" href="/Home/VehicleShow">Vehicle List</a>
            <a class="sa" href="/Home/Inq">Inquery</a>

            Welcome @HttpContext.Current.User.Identity.Name
            @if (Request.IsAuthenticated)
            {
                using (Html.BeginForm("Logout", "Transport", FormMethod.Post, new { id = "logoutForm" }))
                {<a href="javascript:document.getElementById('logoutForm').submit()">Logout</a>
                }
            }

        </div>




        <div class="Inq">
            <form action="" method="post">

                <div class="input-style">
                    <label for="id"> ID: </label>
                    <input type="text" id="Id" name="Id" value="@(Model == null ? "" : Model.Id)" />
                    @Html.ValidationMessage("Id", "", new { @class = "text-danger" }, "span")
                    <br />

                    <label for="name"> Transport Name: </label>
                    <input type="text" id="name" name="Name" value="@(Model == null ? "" : Model.Name)" />
                    @Html.ValidationMessage("Name", "", new { @class = "text-danger" }, "span")
                    <br />

                    <label for="question"> Question: </label>
                    <input type="text" id="name" name="Question" value="@(Model == null ? "" : Model.Question)" />
                    @Html.ValidationMessage("Question", "", new { @class = "text-danger" }, "span")
                    <br />

                    <label for="answer"> Answer: </label>
                    <input type="text" id="name" name="Answer" value="@(Model == null ? "" : Model.Answer)" />
                    @Html.ValidationMessage("Answer", "", new { @class = "text-danger" }, "span")
                    <br />
                </div>
                <div class="submit-page">
                    <input class="btn btn-primary" type="submit" name="report_submit" value="Submit" />
                </div>
                <br />
                <a class="btn btn-info" href="/Home/Index/">Back</a>
            </form>
        </div>
</body>

</html>